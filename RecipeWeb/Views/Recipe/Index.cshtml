@using RecipeBizObjects
@model List<bizRecipe>

<div class="row">
    <div class="col-md-12 text-center">
        <h1>Recipe</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped border border-2 border-dark">
         <tr>
            <td></td>
            <td style="font-weight:bold; font-size:20px">Recipe</td>
            <td style="font-weight:bold; font-size:20px">Calories</td>
            <td style="font-weight:bold; font-size:20px">Created By</td>
        </tr>
            @foreach (bizRecipe r in Model)
            {
                    <tr>
                        <td><img src="/images/@(r.Num).jpg" style="width:100px"/></td>
                        <td style="font-size:20px">@Html.ActionLink(r.RecipeName, "Detail", new{id=@r.Code})</td>
                        <td>@r.Calories</td>
                        <td style="font-size:20px">@r.FirstName @r.LastName</td>
                    </tr>
            }
        </table>
    </div>
</div>